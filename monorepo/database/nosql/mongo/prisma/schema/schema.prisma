generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
  output = "../../../../../node_modules/@prisma/mongo-client"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_DATABASE_URL")
}

model Locale {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model Translation {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}